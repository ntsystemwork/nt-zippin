<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_product_variant_easy_edit_view_inherit" model="ir.ui.view">
        <field name="name">product.product_variant_easy_edit_view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='tags']" position="after">
                <group name="measurements" string="Medidas">
                    <label for="product_height"/>
                    <div class="o_row">
                        <field name="product_height" class="oe_inline"/>
                    </div>
                    <label for="product_width"/>
                    <div class="o_row">
                        <field name="product_width" class="oe_inline"/>
                    </div>
                    <label for="product_length"/>
                    <div class="o_row">
                        <field name="product_length" class="oe_inline"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>